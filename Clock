    <script>
        setInterval(Time, 1000);

        function Time() 
        {
            var str = ["Sun", "Mon", "Tue", "Wed", "Thur", "Fri", "Sat"];
            var str1 = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            const d = new Date();
            document.getElementById("head").innerHTML = `${d.toLocaleTimeString()}`;

            document.getElementById("head1").innerHTML = `${str[d.getDay()]}, ${d.getDate()} ${str1[d.getMonth()]}`;
        }

